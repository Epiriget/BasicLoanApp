<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/customToolbar</item>
    </style>

    <style name="customToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/accentBlack</item>
    </style>

    <style name="InformationText">
        <item name="android:textColor">@color/accentBlack</item>
        <item name="android:textSize">24sp</item>

        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/design_default_color_error</item>
    </style>

    <style name="SeparatorLine">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="primaryText">
        <item name="android:textColor">@color/accentBlack</item>
        <item name="android:textSize">@dimen/accentText</item>
    </style>

    <style name="secondaryText">
        <item name="android:textColor">@color/secondaryAccentBlack</item>
        <item name="android:textSize">@dimen/secondaryAccentText</item>
    </style>



</resources>
